entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["nedit"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "python server.py"]
deploymentTarget = "cloudrun"

[workflows]

[[workflows.workflow]]
name = "Run LuxDB"
author = 43346420
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Run LuxDB Server"
author = 43346420
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"

[[workflows.workflow]]
name = "Initialize Database"
author = 43346420
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python luxdb/init_db.py"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001
externalPort = 80
